---
layout: base.njk
---

<article class="project-detail">
  <h1>{{ title }}</h1>

  {% if image %}
  <div class="project-hero-image">
    {% if link %}
      <a href="{{ link }}" target="_blank">
        <img src="{{ image }}" alt="{{ title }} preview" class="project-detail-image">
      </a>
    {% else %}
      <img src="{{ image }}" alt="{{ title }} preview" class="project-detail-image">
    {% endif %}
  </div>
  {% endif %}

  <div class="project-links">
    {% if link %}
      <a href="{{ link }}" target="_blank" class="portfolio-button">View Project</a>
    {% endif %}
    {% if github %}
      <a href="{{ github }}" target="_blank" class="portfolio-button">View on GitHub</a>
    {% endif %}
  </div>

  <div class="project-content">
    {{ content | safe }}
  </div>

  <a href="/" class="back-link">‚Üê Back to Portfolio</a>
</article>